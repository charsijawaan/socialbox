{{> header}}
<body>
    {{> navbar}}
    <div class="container friends-div">
      <div class="row">
        {{#if users}}
          {{#each users}}
            <div class="col-md-8 nearby-user-wrapper">
                <div class="nearby-user">
                  <div class="row">
                    <div class="col-xs-2">
                      <img src="img/{{this.profilePic}}" alt="user" class="profile-photo-lg">
                    </div>
                    <div class="col-xs-7">
                      <h5><a href="/user/{{this.username}}" class="profile-link"><b>{{this.username}}</b></a></h5>
                    </div>
                    <div class="col-xs-3">
                      <button id="add-friend-button" data-id="{{this.id}}" class="btn btn-primary pull-right">Add Friend</button>
                    </div>
                  </div>
                </div>
            </div>
          {{/each}}
        {{else}}
          <div>
            <h2>No Users Found</h2>
          </div>
        {{/if}}
        </div>
	</div>
</div>
<script type="text/javascript" src="/js/addfriend.js"></script>
</body>
</html>