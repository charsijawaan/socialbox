{{> header}}
<body id="login-page">
<div class="form-box">
    <div class="form-logo">
        <p class="text-center"><img src="img/logo.png" alt="logo"></p>
    </div>
    <form action="/signup" method="POST" enctype="multipart/form-data">
        <input type="text" class="form-control" placeholder="Username" name="username">
        <input type="email" class="form-control" placeholder="Email" name="email">
        <input type="password" class="form-control" placeholder="Password" name="password">
        <input type="file" name="profilepic">
        <input type="submit" class="btn btn-social" value="SIGN UP">
    </form>
    <a href="/login" class="login-action" title="login">
        <p>Have an account?</p>
    </a>
</div>
<!--close form-box-->

<footer class="login-footer text-center">
    <div class="col-xs-3">
        <a class="login-action" href="" title="language">LANGUAGE</a>
    </div>
    <div class="col-xs-3">
        <a class="login-action" href="" title="terms">TERMS</a>
    </div>
    <div class="col-xs-3">
        <a class="login-action" href="" title="privacy">PRIVACY</a>
    </div>
    <div class="col-xs-3">
        <a class="login-action" href="" title="careers">CAREERS</a>
    </div>
</footer>

</body>

</html>